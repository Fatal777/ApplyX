# ApplyX Production Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED - Must be set for production
# ===========================================

# Database
DB_USER=applyx
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
DB_NAME=applyx
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@postgres:5432/${DB_NAME}

# Security
JWT_SECRET_KEY=GENERATE_A_64_CHAR_RANDOM_STRING_HERE
ENCRYPTION_KEY=GENERATE_A_32_CHAR_RANDOM_STRING_HERE
DEBUG=false
ENVIRONMENT=production

# Supabase
SUPABASE_URL=your_supabase_project_url
SUPABASE_KEY=your_supabase_service_key
SUPABASE_ANON_KEY=your_supabase_anon_public_key
SUPABASE_JWT_SECRET=your_supabase_jwt_secret
SUPABASE_PROJECT_REF=your_project_ref

# CORS and Frontend
CORS_ORIGINS=https://applyx.in,https://www.applyx.in,https://api.applyx.in
FRONTEND_URL=https://applyx.in

# ===========================================
# PAYMENT (Configure before go-live)
# ===========================================

# Razorpay
RAZORPAY_KEY_ID=rzp_live_XXXXXXXXXX
RAZORPAY_KEY_SECRET=your_razorpay_secret

# ===========================================
# OPTIONAL - AI Features
# ===========================================

# OpenAI
OPENAI_API_KEY=sk-XXXXXXXXXX

# Google AI (Optional)
GOOGLE_GEMINI_API_KEY=

# ===========================================
# INFRASTRUCTURE
# ===========================================

# Redis (internal docker service)
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_EXTENSIONS=pdf,docx,doc,txt
UPLOAD_DIR=/app/uploads

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log
LOG_JSON_FORMAT=true

# Sentry (Optional error tracking)
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# Admin Dashboard
ADMIN_USERNAME=applyx_admin
ADMIN_PASSWORD=CHANGE_ME_ADMIN_PASSWORD_HERE
