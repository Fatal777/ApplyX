# Application
APP_NAME=ApplyX Resume Analyzer
APP_VERSION=1.0.0
DEBUG=False
ENVIRONMENT=production

# Security
SECRET_KEY=your-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
ENCRYPTION_KEY=your-encryption-key-32-bytes-long

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/applyx
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# AWS S3 (or compatible storage)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=applyx-resumes
S3_ENDPOINT_URL=

# Cloudinary (alternative storage)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_EXTENSIONS=pdf,docx,doc,txt
UPLOAD_DIR=/tmp/uploads

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=True

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_JSON_FORMAT=true

# Monitoring - Sentry
# Sign up at: https://sentry.io/
# Create a FastAPI project and copy the DSN
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# External Services
CLERK_SECRET_KEY=
CLERK_PUBLISHABLE_KEY=

# AI Service Configuration
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo
AI_PROVIDER=openai

# Gemini AI (Budget-optimized interview AI)
GEMINI_API_KEY=

# Deepgram Speech-to-Text (Budget-optimized STT)
DEEPGRAM_API_KEY=

# ==========================================
# LIVEKIT (Real-time Mock Interview)
# ==========================================
# Sign up at: https://cloud.livekit.io/
LIVEKIT_URL=wss://your-project.livekit.cloud
LIVEKIT_API_KEY=
LIVEKIT_API_SECRET=

# ==========================================
# DigitalOcean Gradient AI Platform
# ==========================================
# DO Serverless Inference (Llama 3.3-70B) â€” used as LLM in voice agent
# Get key from: https://cloud.digitalocean.com/gen-ai/serverless-inference
GRADIENT_MODEL_ACCESS_KEY=
# DO GenAI API key (fallback for GRADIENT_MODEL_ACCESS_KEY)
DO_GENAI_API_KEY=
# Deployed Gradient ADK evaluation agent endpoint (optional)
# e.g. https://agents.do-ai.run/v1/your-agent-name
GRADIENT_EVAL_AGENT_URL=

# AgentRouter (alternative AI provider)
AGENTROUTER_API_KEY=
AGENT_ROUTER_TOKEN=
AGENTROUTER_BASE_URL=
AGENTROUTER_MODEL=

# ==========================================
# JOB PORTAL APIs (for job recommendations)
# ==========================================

# Adzuna API - Free tier: 250 calls/month
# Sign up at: https://developer.adzuna.com/
# Supports India with country code 'in'
ADZUNA_APP_ID=
ADZUNA_APP_KEY=

# JSearch (RapidAPI) - Free tier: 200 requests/month
# Sign up at: https://rapidapi.com/letscrape-6bRBa3QguO5/api/jsearch
# Aggregates: LinkedIn, Indeed, Glassdoor, ZipRecruiter
JSEARCH_RAPIDAPI_KEY=

# Remotive API - Free, no auth required
# Docs: https://remotive.com/api/remote-jobs
# (No configuration needed)

# Job portal settings
JOB_PORTAL_DEFAULT_LOCATION=India
JOB_CACHE_TTL_HOURS=4
JOB_RECOMMENDATIONS_TTL_HOURS=24

# ==========================================
# PAYMENT GATEWAY (Razorpay)
# ==========================================

# Razorpay Payment Gateway
# Sign up at: https://razorpay.com/
# Get keys from Dashboard > Settings > API Keys
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_WEBHOOK_SECRET=

# OTP Verification Services
# MSG91 (Primary) - Sign up: https://msg91.com/
MSG91_AUTH_KEY=
MSG91_SENDER_ID=ApplyX
MSG91_TEMPLATE_ID=

# Fast2SMS (Fallback) - Sign up: https://fast2sms.com/
FAST2SMS_API_KEY=

# Cashfree Payment Gateway (Backup)
# Sign up at: https://cashfree.com/
# Rate: 1.95% (vs Razorpay 2%)
CASHFREE_APP_ID=
CASHFREE_SECRET_KEY=
CASHFREE_SANDBOX=true

# PayPal (International)
# Sign up at: https://developer.paypal.com/
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_MODE=sandbox

# Mobile Payment Deep Linking
APP_SCHEME=applyx
PAYMENT_CALLBACK_URL=http://localhost:5173/payment/callback


